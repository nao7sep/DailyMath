<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Explicitly set to use dotted namespace while keeping folder name dot-free -->
    <RootNamespace>DailyMath.Core.Skia</RootNamespace>

    <!-- Assembly Information -->
    <AssemblyTitle>DailyMath Core Skia</AssemblyTitle>
    <Product>DailyMath</Product>
    <Description>SkiaSharp-based cross-platform rendering implementation for DailyMath Core</Description>

    <!-- Version Information - Keep these three in sync with DailyMath.csproj -->
    <Version>0.2.0</Version>
    <AssemblyVersion>0.2.0</AssemblyVersion>
    <FileVersion>0.2.0</FileVersion>

    <!-- Author and Legal -->
    <Authors>Yoshinao Inoguchi</Authors>
    <Company>Yoshinao Inoguchi</Company>
    <Copyright>Copyright (c) 2025 Yoshinao Inoguchi</Copyright>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>

    <!-- Repository -->
    <RepositoryUrl>https://github.com/nao7sep/DailyMath</RepositoryUrl>

    <!-- Localization -->
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SkiaSharp" Version="3.119.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DailyMathCore\DailyMathCore.csproj" />
  </ItemGroup>

</Project>
